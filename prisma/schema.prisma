// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  clerkId               String    @unique // Clerk user ID
  email                 String    @unique
  name                  String?
  plan                  String    @default("free") // free, pro, pro_plus, enterprise
  // Stripe fields for payment integration
  stripeCustomerId      String?   @unique // Stripe customer ID
  stripeSubscriptionId  String?   // Active subscription ID
  stripePriceId         String?   // Current price ID
  subscriptionStatus    String?   // active, canceled, past_due, etc.
  subscriptionEndDate   DateTime? // When subscription ends (for cancellation)
  // Notification preferences
  scoreDropAlerts       Boolean   @default(true) // Get alerts when score drops
  weeklyDigest          Boolean   @default(true) // Weekly summary email
  scanCompleteNotify    Boolean   @default(true) // Notify when scan completes
  webhookUrl            String?   // Slack/Discord webhook URL for notifications
  // GitHub OAuth integration (user-level for all projects)
  githubAccessToken     String?   // Access token for GitHub API
  githubUsername        String?   // GitHub username for display
  githubConnectedAt     DateTime? // When GitHub was connected
  githubAccessMode      String?   // 'all' (full repo access) or 'select' (public only)
  // Vercel OAuth integration (user-level for all projects)
  vercelAccessToken     String?   // Access token for Vercel API
  vercelTeamId          String?   // Vercel team ID (if applicable)
  vercelUsername        String?   // Vercel username for display
  vercelConnectedAt     DateTime? // When Vercel was connected
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  lastScan              DateTime? // Track last scan for rate limiting
  projects              Project[]

  @@index([clerkId])
  @@index([stripeCustomerId])
}

model Project {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String
  url           String
  githubRepo    String?   // GitHub repo URL for this project (e.g., owner/repo)
  vercelProject String?   // Vercel project name for this project
  autoScanEnabled Boolean @default(false)
  autoScanSchedule String? // cron expression
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  scans         Scan[]
  dismissedRecommendations DismissedRecommendation[]

  @@index([userId])
}

model DismissedRecommendation {
  id                String   @id @default(cuid())
  projectId         String
  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  recommendationKey String   // Unique identifier: phaseName + hash of recommendation title
  dismissedAt       DateTime @default(now())

  @@unique([projectId, recommendationKey])
  @@index([projectId])
}

model Scan {
  id         String      @id @default(cuid())
  projectId  String
  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  score      Int
  scannedAt  DateTime    @default(now())
  phases     ScanPhase[]
  metadata   Json?       // Additional scan metadata
  trigger    String      @default("manual") // manual, auto-scan, api

  @@index([projectId])
  @@index([scannedAt])
}

model ScanPhase {
  id              String   @id @default(cuid())
  scanId          String
  scan            Scan     @relation(fields: [scanId], references: [id], onDelete: Cascade)
  phaseName       String
  score           Int
  maxScore        Int
  findings        Json     // Detailed findings for this phase
  recommendations Json?    // Recommendations for improvement
  createdAt       DateTime @default(now())

  @@index([scanId])
}
